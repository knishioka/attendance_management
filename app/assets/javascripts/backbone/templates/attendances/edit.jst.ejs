<h1>Edit attendance</h1>

<form id="edit-attendance" name="attendance">
  <div class="field form-group">
    <label for="working_day"> working_day:</label>
    <input class="form-control" type="text" name="working_day" id="working_day" value="<%= working_day %>" >
  </div>

  <div class="field form-group">
    <label for="working_time"> working_time:</label>
    <input class="form-control" type="text" name="working_time" id="working_time" value="<%= working_time %>" >
  </div>

  <div class="field form-group">
    <label for="comment"> comment:</label>
    <textarea class="form-control" name="comment" id="comment"><%= comment %></textarea>
  </div>

  <div class="actions">
    <input class="btn btn-default" type="submit" value="Update Attendance" />
  </div>

</form>

